{
    "name": "@digital-boss/n8n-nodes-odoo",
    "version": "0.2.3",
    "description": "A node consuming the Odoo API.",
    "license": "MIT",
    "homepage": "https://n8n.io",
    "author": {
        "name": "Steffen Hannesschlaeger",
        "email": "steffen_hannesschlaeger@hotmail.de"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/digital-boss/n8n-nodes-odoo"
    },
    "main": "index.js",
    "scripts": {
        "dev": "npm run watch",
        "build": "tsc && gulp",
        "tslint": "tslint -p tsconfig.json -c tslint.json",
        "watch": "tsc --watch",
        "test": "jest"
    },
    "files": [
        "dist"
    ],
    "n8n": {
        "credentials": [
            "dist/credentials/OdooApi.credentials.js"
        ],
        "nodes": [
            "dist/nodes/Odoo/Odoo.node.js"
        ]
    },
    "devDependencies": {
        "@types/express": "^4.17.6",
        "@types/jest": "^26.0.13",
        "@types/node": "14.17.27",
        "@types/request-promise-native": "~1.0.15",
        "gulp": "^4.0.0",
        "jest": "^26.4.2",
        "n8n-workflow": "~0.87.0",
        "nodelinter": "^0.1.9",
        "ts-jest": "^26.3.0",
        "tslint": "^6.1.2",
        "typescript": "~4.3.5"
    },
    "dependencies": {
        "n8n-core": "~0.105.0",
        "rhea": "^1.0.11"
    },
    "jest": {
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "testURL": "http://localhost/",
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
        "testPathIgnorePatterns": [
            "/dist/",
            "/node_modules/"
        ],
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js",
            "json"
        ]
    }
}
